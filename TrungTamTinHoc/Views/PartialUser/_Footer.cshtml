    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="single-footer-widget">
                    <div class="footer-logo">
                        <a href="@Url.RouteUrl("Home")"><img src="~/public/img/common/logo.png" alt=""></a>
                    </div>
                    <p>@caiDat.TomTat</p>
                    <div class="social-icons">
                        <a href="@caiDat.LinkFB"><i class="zmdi zmdi-facebook"></i></a>
