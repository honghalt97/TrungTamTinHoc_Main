@{
    CaiDatHeThong caiDat = ViewBag.caiDat;
}
@section scripts{

    @Scripts.Render("~/public/js/subscribe")
}
@using Resources;
@using TTTH.DataBase.Schema;

<!--Newsletter Area Start-->
<div class="newsletter-area">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5">
                <div class="newsletter-content">
                    <h3>@UserLang.Subscribe</h3>
                    <h2>@UserLang.ToOutNewsleetter</h2>
                </div>
            </div>
            <div class="col-md-7 col-sm-7">
                <div class="newsletter-form">
                    <form id="form-subscribe" action="@Url.RouteUrl("SubscribeEmail")" method="post">
                        <div class="subscribe-form">
                            <input type="email" name="Email" id="Email" class="required email mb-5" maxlength="255" tabindex="1" placeholder="@UserLang.EnterYourEmailAddress">
                            <button type="button" id="btn-subscribe">@UserLang.Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of Newsletter Area-->
<!--Footer Widget Area Start-->
